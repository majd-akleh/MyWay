<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">


    <item

        android:state_pressed="false">
        <shape android:shape="rectangle">

<solid android:color="#888888"
    ></solid>
            <corners
                android:radius="7sp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp" />

            <size
                android:width="200dp"
                android:height="30dp" />

        </shape>

    </item>

    <item
        android:top="2dp"
        android:right="3dp"

        android:state_pressed="false">
        <shape android:shape="rectangle">

            <corners
                android:radius="7sp"
                android:bottomRightRadius="0dp"
                android:bottomLeftRadius="0dp" />
            <gradient
                android:angle="90"
                android:endColor="#a0a0a0"
                android:startColor="#c3c3c3">

                </gradient>
            <size
                android:width="200dp"
                android:height="30dp" />

        </shape>

    </item>


</layer-list>