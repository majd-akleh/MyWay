<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="3dp"
        android:right="3dp"
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="400dip" />

            <gradient
                android:angle="90"
                android:endColor="#aaaaaa"
                android:startColor="#aaaaaa"></gradient>
            <size
                android:width="200dp"
                android:height="30dp" />

        </shape>

    </item>

    <item
        android:bottom="6dp"
        android:right="6dp"
        android:state_pressed="false">
        <shape android:shape="rectangle">
            <corners android:radius="400dip" />

            <gradient
                android:angle="90"
                android:endColor="#d2d2d2"
                android:startColor="#c8c8c8"></gradient>
            <size
                android:width="200dp"
                android:height="30dp" />

        </shape>

    </item>


</layer-list>